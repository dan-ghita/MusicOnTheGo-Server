<section>
  <h1>Search results:</h1>

  <div class="results">

    <% @results.each do |result| %>
        
            <% path = "http://localhost:3000/" + result[:path] %>

            <h3><%= result[:title] %> - <%= result[:artist] %></h3>

        
            <audio controls>
              <source src = "<%= path %>" type="audio/mpeg">
              Your browser does not support the audio element.
            </audio>

        <% end %>

  </div>
</section>



