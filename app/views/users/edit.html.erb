<section>
    <h1>Edit Profile</h1>

    <%= form_for :user, :url => {:action => 'update'} do |f| %>
        <p>
            <%= f.label :first_name %>
            <%= f.text_field :first_name %>
        </p>

        <p>
            <%= f.label :last_name %>
            <%= f.text_field :last_name %>
        </p>

        <p>
            <%= f.label :email %>
            <%= f.text_field :email %>
        </p>

        <p class="submit">
            <%= f.submit %>
        </p>
    <% end %>
</section>