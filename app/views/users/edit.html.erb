<div class = 'pt4em'></div>



<section style = " margin: auto; text-align: center;" >

  <h1>Edit Profile</h1>

  <%= form_for :user, :url => {:action => 'update'} do |f| %>

      <p>
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name %>
      </p>
      <p>
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name %>
      </p>
      <p>
        <%= f.label :email %><br />
        <%= f.text_field :email %>
      </p>

      <p class="button"><%= f.submit %></p>

  <% end %>

</section>