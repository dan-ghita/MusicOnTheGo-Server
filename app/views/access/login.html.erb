<% @page_title = "Admin Login" %>

<section>
  <div class="login" style = " margin: auto; text-align: center;" >

    <h1>Log in</h1>
    
    <%= form_tag(:action => 'attempt_login') do %>

        <p>
          <%= label_tag(:username) %>
          <%= text_field_tag(:username, '', :required => true) %>
        </p>
        
        <p>
          <%= label_tag(:password) %>
          <%= password_field_tag(:password, '', :required => true) %>
        </p>

        <p class='submit'>
          <%= submit_tag("Log In") %>
        </p>
        
    <% end %>

    <p class='submit'>
      <%= button_to "Sign Up", :controller => 'users', :action => 'new' %>
    </p>

  </div>
</section>
