<!DOCTYPE html>
<html>
<head>
  <title>MDSProject</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta charset='utf-8'>
  <!--<meta name='viewport' content='user-scalable=no'>-->
  <link rel='icon' type='image/png' href='img/logo.jpg' />
  <link href='http://fonts.googleapis.com/css?family=Monoton' rel='stylesheet' type='text/css'>

</head>

<body>


    <div id='container'>

      <header>
        <div id='menu-button'>
          <div id='menu-button-content'>&#9776;</div>
          <!-- <img src="img/menu-icon"> -->
        </div>

        <div id='logo'>
          <%= link_to "Music", {:controller => 'home', :action => 'index'}, :id => 'logo-content' %>
        </div>

        <div id='side-bar'>
          <%= form_tag({:controller => 'home', :action => 'search_results'}, :id => 'search-bar') do %>
              <%= text_field_tag(:query, @par ? @par : nil, :placeholder => "Search for music, playlists, artists..", :id => 'search-field', :type => 'search', :required => true ) %>
              <button type="submit" id='search-button' >
                <img src = 'http://localhost:3000/search_icon.png'  alt="Search">
              </button>
          <% end %>

          <nav id="super-nav">

            <nav id='nav1'>
              <ul class='menu'>
                <li><%= link_to "Home", :controller => 'home', :action => 'index', :class => "menu-item" %></li>
                <li class='drop-down'>
                  <a>My music<span class='drop-down-sign'>&#8250;</span></a>
                  <ul class='submenu'>
                    <li><%= link_to "Songs", :controller => 'music', :action => 'songs_index', :class => "menu-item" %></li>
                    <li><%= link_to "Playlists", :controller => 'music', :action => 'playlists_index', :class => "menu-item" %></li>
                  </ul>
                </li>
              </ul>
            </nav>

            <nav id='nav2'>
              <ul class='menu'>
                <% current_user = session[:username] %>
                <% if current_user %>
                    <li class='drop-down'>
                      <a>My profile</a>
                      <ul class='submenu'>
                        <li>
                          <%= link_to session[:username], :controller => 'users', :action => 'show' %>
                        </li>
                        <li>
                        <%= link_to "Log Out", :controller => 'access', :action => 'logout' %>
                        </li>
                      </ul>
                    </li>
                <% else %>
                    <li>
                      <%= link_to "Log In", :controller => 'access', :action => 'login' %>
                    </li>
                    <li>
                      <%= link_to "Sign Up", :controller => 'users', :action => 'new' %>
                    </li>

                <% end %>
              </ul>
            </nav>
          </nav>
        </div>

      </header>

      <div id='content'>

        <div>
          <% flash.each do |name, msg| %>
            <div id='notification'>
              <%= msg %>
            </div>
          <% end %>
        </div>

        <%= yield %>

      </div>

      <footer>
            Footer!
      </footer>
    </div>


</body>


</html>
