
<section>
  <article class = "section-element">

    <h1>Upload Song</h1>


    <%= form_tag({action: :upload}, multipart: true) do %>

        <p>
          <%= label_tag(:title) %>
        </p>
        <p>
          <%= text_field_tag(:title, '', :required => true) %>
        </p>
        <p>
          <%= label_tag(:artist) %>
        </p>
        <p>
          <%= text_field_tag(:artist, '', :required => true) %>
        </p>
        <p>
          <%= label_tag(:album) %>
        </p>
        <p>
          <%= text_field_tag(:album, '', :required => true) %>
        </p>
        <p>
          <%= file_field_tag 'file' %>
        </p>
        <p>
          <%= radio_button_tag 'gender', 'male' %>
        </p>
        <p>
          <%= submit_tag 'Submit' %>
        </p>
    <% end %>


  </article>
</section>
