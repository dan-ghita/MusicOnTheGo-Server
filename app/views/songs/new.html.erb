
<section>

    <h1>Upload Song</h1>

    <%= form_tag({action: :upload}, multipart: true) do %>

        <p>
          <%= label_tag(:title) %>
          <%= text_field_tag(:title, '', :required => true) %>
        </p>

        <p>
          <%= label_tag(:artist) %>
          <%= text_field_tag(:artist, '', :required => true) %>
        </p>

        <p>
          <%= label_tag(:album) %>
          <%= text_field_tag(:album, '', :required => true) %>
        </p>

       <!--  <label for="file-upload" id='file'>
            Browse song
        </label>
        <input id="file-upload" type="file"/> -->

        <p>
          <%= file_field_tag 'file' %>
        </p>

        <p class='submit'>
          <%= submit_tag 'Submit' %>
        </p>
    <% end %>

</section>
